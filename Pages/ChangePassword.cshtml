@page
@model WebApplication1.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-key-fill"></i> Change Password</h3>
                </div>
                <div class="card-body">
                    @if (Model.MustChangePassword)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Password Expired:</strong> @Model.InfoMessage
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.InfoMessage))
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-circle-fill"></i> @Model.InfoMessage
                        </div>
                    }

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle-fill"></i> Password Requirements:</h6>
                        <ul class="mb-0">
                            <li>At least 12 characters long</li>
                            <li>Contains uppercase and lowercase letters</li>
                            <li>Contains at least one number</li>
                            <li>Contains at least one special character</li>
                            <li>Cannot be the same as your last 2 passwords</li>
                            <li>Cannot be changed more than once every 5 minutes</li>
                        </ul>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Model.CurrentPassword" class="form-label"></label>
                            <input asp-for="Model.CurrentPassword" class="form-control" autocomplete="current-password" />
                            <span asp-validation-for="Model.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Model.NewPassword" class="form-label"></label>
                            <input asp-for="Model.NewPassword" class="form-control" id="newPassword" autocomplete="new-password" />
                            <span asp-validation-for="Model.NewPassword" class="text-danger"></span>
                            
                            <!-- Password strength indicator -->
                            <div id="password-strength" class="mt-2" style="display: none;">
                                <div class="progress" style="height: 5px;">
                                    <div id="strength-bar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                                </div>
                                <small id="strength-text" class="text-muted"></small>
                            </div>

                            <!-- Requirements checklist -->
                            <div class="mt-2">
                                <small class="text-muted">
                                    <div id="req-length" class="requirement"><i class="bi bi-x-circle text-danger"></i> At least 12 characters</div>
                                    <div id="req-lowercase" class="requirement"><i class="bi bi-x-circle text-danger"></i> Lowercase letter</div>
                                    <div id="req-uppercase" class="requirement"><i class="bi bi-x-circle text-danger"></i> Uppercase letter</div>
                                    <div id="req-number" class="requirement"><i class="bi bi-x-circle text-danger"></i> Number</div>
                                    <div id="req-special" class="requirement"><i class="bi bi-x-circle text-danger"></i> Special character</div>
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Model.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Model.ConfirmPassword" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Model.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Change Password
                            </button>
                            @if (!Model.MustChangePassword)
                            {
                                <a asp-page="/Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/password-strength.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('newPassword');
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    PasswordStrength.checkStrength(this.value);
                });
            }
        });
    </script>
}
