@page
@model WebApplication1.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-shield-lock"></i> Forgot Password</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
                        </div>
                        <div class="text-center mt-3">
                            <a asp-page="/Login" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Return to Login
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle-fill"></i>
                            Enter your email address and choose how you would like to reset your password.
                        </div>

                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Model.Email" class="form-label"></label>
                                <input asp-for="Model.Email" class="form-control" placeholder="Enter your registered email" />
                                <span asp-validation-for="Model.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="Model.UseSms" class="form-check-input" />
                                    <label asp-for="Model.UseSms" class="form-check-label">
                                        Reset via SMS (6-digit code will be sent to your registered mobile number)
                                    </label>
                                </div>
                                <small class="text-muted">
                                    If unchecked, a reset link will be sent to your email address.
                                </small>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="bi bi-send-fill"></i> Send Reset Instructions
                                </button>
                                <a asp-page="/Login" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Login
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
