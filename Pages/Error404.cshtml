@model WebApplication1.Pages.Error404Model
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="text-center" style="padding: 60px 0;">
    <h1 class="display-1" style="font-size: 120px; color: #dc3545;">404</h1>
    <h2 class="mb-4">Page Not Found</h2>
    <p class="lead mb-4">Sorry, the page you are looking for could not be found.</p>
    <p class="text-muted mb-4">The page may have been moved, deleted, or never existed.</p>
    <a href="/" class="btn btn-primary">Go to Home Page</a>
</div>