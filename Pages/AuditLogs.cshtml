@page
@model WebApplication1.Pages.AuditLogsModel
@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Your Activity Log</h3>
                </div>
                <div class="card-body">
                    @if (Model.AuditLogs.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Action</th>
                                        <th>Details</th>
                                        <th>IP Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.AuditLogs)
                                    {
                                        <tr>
                                            <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>
                                                @if (log.Action.Contains("Success"))
                                                {
                                                    <span class="badge bg-success">@log.Action</span>
                                                }
                                                else if (log.Action.Contains("Failed"))
                                                {
                                                    <span class="badge bg-danger">@log.Action</span>
                                                }
                                                else if (log.Action == "Logout")
                                                {
                                                    <span class="badge bg-warning text-dark">@log.Action</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@log.Action</span>
                                                }
                                            </td>
                                            <td>@log.Details</td>
                                            <td>
                                                <small class="text-muted">@log.IpAddress</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No activity logs found.
                        </div>
                    }
                    
                    <div class="mt-3">
                        <a href="/" class="btn btn-secondary">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
