@page
@model WebApplication1.Pages.Verify2FAModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">
                        <i class="bi bi-shield-lock-fill"></i> Two-Factor Authentication
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-center mb-4">
                        Enter the 6-digit code from your authenticator app to complete login.
                    </p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @if (!Model.UseRecoveryCode)
                        {
                            <div class="form-group mb-4">
                                <label asp-for="TwoFactorCode" class="form-label">Authentication Code</label>
                                <input asp-for="TwoFactorCode" class="form-control form-control-lg text-center" 
                                       placeholder="000000" maxlength="6" autocomplete="off" autofocus 
                                       style="font-size: 1.5rem; letter-spacing: 0.5rem;" />
                                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="RememberMachine" class="form-check-input" type="checkbox" />
                                <label asp-for="RememberMachine" class="form-check-label">
                                    Remember this device for 30 days
                                </label>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle"></i> Verify
                                </button>
                            </div>

                            <hr />

                            <div class="text-center">
                                <p class="text-muted mb-2">Don't have access to your authenticator app?</p>
                                <button type="submit" asp-page-handler="UseRecoveryCode" class="btn btn-link">
                                    Use a recovery code instead
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Recovery Code Login</strong>
                                <p class="mb-0 mt-2">Enter one of your recovery codes. Each code can only be used once.</p>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="RecoveryCode" class="form-label">Recovery Code</label>
                                <input asp-for="RecoveryCode" class="form-control form-control-lg text-center" 
                                       placeholder="XXXX-XXXX" autocomplete="off" autofocus 
                                       style="font-size: 1.5rem; letter-spacing: 0.3rem;" />
                                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="bi bi-key"></i> Use Recovery Code
                                </button>
                            </div>

                            <hr />

                            <div class="text-center">
                                <button type="submit" asp-page-handler="UseAuthenticatorCode" class="btn btn-link">
                                    <i class="bi bi-arrow-left"></i> Back to authenticator code
                                </button>
                            </div>
                        }

                        <input type="hidden" asp-for="ReturnUrl" />
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Having trouble? Contact support.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
